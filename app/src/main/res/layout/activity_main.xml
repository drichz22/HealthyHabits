<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:paddingTop="100dp"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="382dp"
        android:layout_height="316dp"
        android:id="@+id/HomeLogo"
        android:layout_gravity="center"
        android:background="@drawable/logo_home"/>

    <Button
        android:layout_width="181dp"
        android:layout_height="57dp"
        android:id="@+id/loginBtn"
        android:text="Login"
        android:fontFamily="@font/poppins_bold"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_button_dark_green"
        android:layout_gravity="center"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="181dp"
        android:layout_height="57dp"
        android:id="@+id/daftarBtn"
        android:text="Daftar"
        android:fontFamily="@font/poppins_bold"
        android:textSize="18dp"
        android:textColor="#000000"
        android:background="@drawable/custom_button_light_green"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textAllCaps="false"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/bottomLayoutHome"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_gravity="center"
        android:background="@drawable/bottom_layout_home" />

</LinearLayout>