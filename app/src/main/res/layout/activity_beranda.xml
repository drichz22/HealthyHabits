<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context=".Beranda">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_search_button"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_gravity="center_vertical"
                        android:textAllCaps="false"
                        style="@style/text"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/search"
                        android:layout_gravity="center"
                        android:layout_marginStart="35dp"
                        android:layout_marginBottom="4dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:id="@+id/MenuEditProfile"
                    android:layout_height="50dp"
                    style="@style/ProfileBtn"
                    android:layout_marginLeft="130dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:id="@+id/MenuGiziMakanan"
                    android:orientation="vertical"
                    android:background="@drawable/custom_beranda_button_ripple"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="3dp">

                    <ImageView
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:src="@drawable/gizimakanan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Gizi Makanan"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textAllCaps="false"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:id="@+id/MenuAktivitasSehat"
                    android:orientation="vertical"
                    android:background="@drawable/custom_beranda_button_ripple"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="3dp"
                    android:layout_marginStart="30dp">

                    <ImageView
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:src="@drawable/aktivitas_sehat" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Aktivitas Sehat"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:id="@+id/MenuRumahSehat"
                    android:orientation="vertical"
                    android:background="@drawable/custom_beranda_button_ripple"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="3dp"
                    android:layout_marginStart="30dp">

                    <ImageView
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:src="@drawable/rumah_sehat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Rumah Sehat"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textAllCaps="false"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/beranda_green_rectangle"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="56dp"
                    android:background="@drawable/questionhome_3"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="MENGAPA KONSUMSI MAKANAN SEHAT?"
                        android:textAlignment="center"
                        style="@style/text"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Meningkatkan imun tubuh\n• Memperkuat tulang\n• Mengurangi risiko penyakit mematikan"
                        android:fontFamily="@font/poppins_semibold"
                        style="@style/text"
                        android:textSize="14dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="56dp"
                    android:background="@drawable/questionhome_1"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MENGAPA HARUS MELAKUKAN AKTIVITAS SEHAT?"
                        android:fontFamily="@font/poppins_bold"
                        style="@style/text"
                        android:layout_marginStart="25dp"
                        android:textSize="16dp"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Menurunkan tekanan darah\n• Menurunkan stres\n• Menyehatkan jantung"
                        android:fontFamily="@font/poppins_semibold"
                        style="@style/text"
                        android:textSize="14dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="56dp"
                    android:background="@drawable/questionhome_2"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MENGAPA HARUS TINGGAL DI RUMAH SEHAT?"
                        android:fontFamily="@font/poppins_bold"
                        style="@style/text"
                        android:layout_marginStart="25dp"
                        android:textSize="16dp"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Terhindar dari berbagai penyakit\n• Lebih nyaman di rumah\n• Aman dari segala bahaya kecelakaan"
                        android:fontFamily="@font/poppins_semibold"
                        style="@style/text"
                        android:textSize="14dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/navigation"
        app:itemIconTint="#28844B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:labelVisibilityMode="labeled"
        app:itemTextColor="#28844B"
        app:menu="@menu/bottom_navmenu"/>

</androidx.constraintlayout.widget.ConstraintLayout>